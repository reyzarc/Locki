<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/translucent"/>
            <stroke android:width="0dp" android:color="@color/white"/>
            <size android:width="30dp"
                  android:height="30dp"/>
        </shape>
    </item>
    <item android:drawable="@color/transparent" android:state_enabled="false"/>
    <item android:drawable="@color/transparent" android:state_pressed="false"/>
</selector>